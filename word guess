import java.util.Scanner;

public class PalindromeRecursion {

    // Recursive function to reverse the number
    public static int reverseNumber(int num, int rev) {
        if (num == 0) {
            return rev;
        }
        // Recursively build the reverse number
        rev = rev * 10 + num % 10;
        return reverseNumber(num / 10, rev);
    }

    // Function to check if the number is a palindrome
    public static boolean isPalindrome(int num) {
        // Get the reverse of the number
        int reversedNumber = reverseNumber(num, 0);
        // Check if the original number is equal to its reverse
        return num == reversedNumber;
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int num = scanner.nextInt();

        if (isPalindrome(num)) {
            System.out.println(num + " is a palindrome.");
        } else {
            System.out.println(num + " is not a palindrome.");
        }

        scanner.close();
    }
}
